# ================================
# RAILWAY DEPLOYMENT CONFIGURATION
# ================================

# Server
PORT=3000
NODE_ENV=production

# Security
JWT_SEED=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key-here-change-this

# API Token (opcional - para endpoints protegidos adicionales)
X_TOKEN_API=optional-api-token-for-extra-security

# Database (Railway PostgreSQL)
# Railway proveerá automáticamente DATABASE_URL
# No necesitas configurar estos manualmente en Railway
DATABASE_URL=postgresql://user:password@host:5432/database

# LLM Provider Configuration
# Opciones: 'openai' o 'ollama'
LLM_PROVIDER=openai

# OpenAI (solo necesario si LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Ollama (solo necesario si LLM_PROVIDER=ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=gemma3:4b
OLLAMA_EMBEDDING_MODEL=embeddinggemma:latest

# URLs (Actualiza estas con tus URLs de Railway)
BACKEND_URL=https://your-railway-backend-url.up.railway.app
FRONTEND_URL=https://your-railway-frontend-url.up.railway.app

# Database Configuration (Railway usa estos nombres)
# Estos son generados automáticamente por Railway cuando agregas PostgreSQL
PGHOST=your-railway-postgres-host
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your-railway-postgres-password
PGDATABASE=railway

# Vector Extension Config
TABLE_VECTOR=document_vectors
COL_TEXT=text
COL_SOURCE=source

